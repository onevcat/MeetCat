{
  "manifest_version": 3,
  "name": "MeetCat",
  "description": "Auto-join Google Meet meetings with smart scheduling",
  "version": "0.0.4",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "exclude_matches": ["https://meet.google.com/*-*-*"],
      "js": ["content-homepage.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://meet.google.com/*-*-*"],
      "js": ["content-meeting.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon-color.png"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}
